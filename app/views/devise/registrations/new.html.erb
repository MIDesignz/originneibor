<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <br>
    <br>
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-block btn-primary" %><br />
      <% end -%>
    <% end -%>

    <div class="separator"><div class="text or">or</div></div>

    <br>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "wizard-big" }) do |f| %>
      <h2 class="text-center">Register</h2><br>
      <%= f.input :name, autofocus: true, placeholder: 'Your full name' %>
      <%= f.input :email, autofocus: true, placeholder: 'you@example.com' %>
      <%= f.input :password, hint: 'Must be at least 8 characters long.' %>
      <%= f.input :password_confirmation %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.submit "Create Account", class: "btn btn-primary btn-block" %>
        </div>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
    <div class="row">
      <div class="col-md-6">
        <small>Â© 2016 BY UNITED NEIGHBOR</small>
      </div>
    </div>
  </div>
</div>




