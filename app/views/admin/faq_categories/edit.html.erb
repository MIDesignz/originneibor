<div class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-inverse">
        <div class="panel-heading">
          <h4 class="panel-title">Edit FAQ category</h4>
        </div>
        <div class="panel-body">
          <%= form_for [:admin, @faq_category] do |f| %>
            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :priority %>
              <%= f.text_field :priority, class: "form-control" %>
            </div>
            <div class="row">
              <div class="col-md-6 col-md-offset-3">
                <%= f.submit "Update", class: "btn btn-primary btn-block" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>