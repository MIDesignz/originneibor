<div class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-inverse">
        <div class="panel-heading">
          <h4 class="panel-title">New FAQ</h4>
        </div>
        <div class="panel-body">
          <%= form_for [:admin, @faq] do |f| %>
            <div class="form-group">
              <%= f.label :faq_category %>
              <%= f.select :faq_category_id, options_for_select(FaqCategory.all.map{ |c| [c.title, c.id] }), {include_blank: "Select FaqCategory"}, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :priority %>
              <%= f.text_field :priority, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: "form-control" %>
            </div>
            <div class="row">
              <div class="col-md-6 col-md-offset-3">
                <%= f.submit "Create", class: "btn btn-primary btn-block" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>