    <![endif]-->
  </head>
  <body class="body-wrapper">
    <div class="main-wrapper">
      <%= render 'layouts/alerts' %>
      <%= render 'shared/navbar' %>  
      <%= yield %>
      <div id="modal-container"></div>
      <%#= render 'shared/footer' %>
    </div>
    <%= render 'layouts/modal' %>
    <%= javascript_include_tag "users/application" %>
  </body>
